# Cache Settings
DISABLE_CACHE=true
DISABLE_STREAM_CACHE=true
USE_REDIS_CACHE=false
REDIS_URL=

# Global Proxy Configuration
SHOWBOX_PROXY_URL_VALUE=
SHOWBOX_PROXY_URL_ALTERNATE=
SHOWBOX_USE_ROTATING_PROXY=true

# Provider-specific Proxy URLs
# If empty, will make direct requests without proxy
VIDSRC_PROXY_URL=
VIDZEE_PROXY_URL=
SOAPERTV_PROXY_URL=
HOLLYMOVIEHD_PROXY_URL=
XPRIME_PROXY_URL=
CUEVANA_PROXY_URL=
CUEVANA_M3U8_PROXY_URL=
XPRIME_USE_PROXY=false

# Provider Enablement
ENABLE_VIDZEE_PROVIDER=true
ENABLE_HOLLYMOVIEHD_PROVIDER=true
ENABLE_XPRIME_PROVIDER=true
ENABLE_CUEVANA_PROVIDER=true

# API Keys and External Services
TMDB_API_KEY=
USE_SCRAPER_API=true
HIANIME_SERVER=

# Showbox proxy configuration
# Primary proxy URL with the format ending in /?destination=
SHOWBOX_PROXY_URL_VALUE=https://starlit-valkyrie-39f5ab.netlify.app/?destination=
# Alternative proxy URL for rotation (same format)
SHOWBOX_PROXY_URL_ALTERNATE=https://frolicking-semolina-769185.netlify.app/?destination=
# Set to true to enable proxy rotation between primary and alternate URLs
SHOWBOX_USE_ROTATING_PROXY=true
# SCRAPER_MODE=proxy
# SCRAPER_API_KEY_VALUE=your_scraper_api_key
USE_SCRAPER_API=true
TMDB_API_KEY=your_tmdb_api_key_here
# For Xprime, use the direct proxy URL without any suffix (no /?destination= needed)
# Example: XPRIME_PROXY_URL=https://nuvioaddon.duckdns.org
XPRIME_PROXY_URL=
XPRIME_USE_PROXY=true
CUEVANA_PROXY_URL=https://proxyname/?destination=
CUEVANA_M3U8_PROXY_URL=https://proxyname/m3u8-proxy
# Set to true to enable Cuevana. Often requires a proxy configured for the addon or Showbox proxy if it's routed through there.
ENABLE_CUEVANA_PROVIDER=true
ENABLE_HOLLYMOVIEHD_PROVIDER=true
# Set to false to disable the Xprime.tv provider
ENABLE_XPRIME_PROVIDER=true
# (Optional) URL for your self-hosted Hianime scraper service (see README for setup details)
# Defaults to a public endpoint if not set, but self-hosting is recommended for reliability.
# Example: HIANIME_SERVER=http://your-hianime-service-ip:8082/fetch-hianime
HIANIME_SERVER=
DISABLE_STREAM_CACHE=false
 
USE_REDIS_CACHE=false
REDIS_URL=redis://username:password@hostname:port

# Provider-specific proxy URLs (format: https://your-proxy.com/?destination=
# If not set, will fall back to SHOWBOX_PROXY_URL_VALUE
VIDZEE_PROXY_URL=
SOAPERTV_PROXY_URL=
HOLLYMOVIEHD_PROXY_URL=

# Port configuration
PORT=7000